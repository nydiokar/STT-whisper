<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Core audio permissions -->
    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.VIBRATE" />

    <!-- IME and service permissions (Phase 5 preparation) -->
    <uses-permission android:name="android.permission.BIND_INPUT_METHOD" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />

    <!-- Memory and performance optimization -->
    <uses-permission android:name="android.permission.REQUEST_IGNORE_BATTERY_OPTIMIZATIONS" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.Light.DarkActionBar"
        android:largeHeap="true"
        android:hardwareAccelerated="true"
        android:requestLegacyExternalStorage="false">

        <!-- Main Activity (Voice Notes History) -->
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Recorder Activity (Full-screen recording) -->
        <activity
            android:name=".RecorderActivity"
            android:exported="false"
            android:parentActivityName=".MainActivity" />

        <!-- Settings Activity for IME -->
        <activity
            android:name=".SettingsActivity"
            android:label="Voice Input Settings"
            android:exported="true" />

        <!-- Help Activity -->
        <activity
            android:name=".HelpActivity"
            android:label="Voice Input Guide"
            android:exported="false"
            android:parentActivityName=".SettingsActivity" />

        <!-- Phase 2: IME Service (Voice Keyboard) -->
        <service
            android:name=".ime.VoiceInputIME"
            android:permission="android.permission.BIND_INPUT_METHOD"
            android:exported="true"
            android:label="Voice Input Keyboard">
            <intent-filter>
                <action android:name="android.view.InputMethod" />
            </intent-filter>
            <meta-data
                android:name="android.view.im"
                android:resource="@xml/method" />
        </service>

        <!-- Phase 5: Background transcription service -->
        <service
            android:name=".service.VoiceInputService"
            android:foregroundServiceType="microphone"
            android:exported="false" />

    </application>

</manifest>